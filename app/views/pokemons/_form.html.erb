<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for(pokemon, html: { class: 'custom-form' }) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :name, label: 'Name' %>
          <%= f.label :pokemon_type, label: 'Type de pokémon'%>
          <%= f.collection_select :pokemon_type, Pokemon::TYPES, :to_s, :humanize, { include_blank: 'Selectionner le type de pokémon' }, class: 'pokemon-custom-select' %>
          <%= f.input :description, label: 'Description' %>
          <%= f.input :location, label: 'Location' %>
          <%= f.input :price, label: 'Price' %>
          <%= f.input :images, as: :file, label: 'Images', input_html: { multiple: true } %>
        </div>

        <div class="form-actions text-center mt-4">
          <%= f.button :submit, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
