<div class="container">
  <h1 class="text-center mt-5">All your Pokemons in PokedexðŸ’¦ðŸ”¥ðŸŒ±</h1>
  <div class="row justify-content-center mt-5">
    <% if @pokemons.empty? %>
      <p class="text-center">No pokemon yet!</p>
    <% else %>
      <!-- Pokemon Grid -->
      <div class="row justify-content-center">
        <% @pokemons.each do |pokemon| %>
          <div class="col-md-4 col-sm-6 mb-4">
            <div class="pokemon-card pokemon-card-shadow" data-aos="zoom-in">
              <div class="pokemon-card-body">
                <%= image_tag pokemon.images.first, class: "pokemon-card-img" %>
                <div class="pokemon-card-body text-center">
                  <%= link_to pokemon[:name], pokemon_path(pokemon[:id]), class: "pokemon-card-title" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
