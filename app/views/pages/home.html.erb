<!-- Hero Start -->
<div class="cover-hp p-5 text-center bg-image rounded-3" style="background-image: url('https://imgs.search.brave.com/uTOj-18jplYF-W0y7CkGTlJXgUGonp_aIkj2FDicAQ0/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9pbWFn/ZXM3LmFscGhhY29k/ZXJzLmNvbS82NjEv/NjYxOTg2LmpwZw');">
  <div class="d-flex justify-content-center align-items-center h-100">
    <div>
      <h1 class="homepage mb-3">Loue ton Pokemon de compagnie !</h1>
      <h2 class="homepage mb-5">Une large sélection de Pokemon à louer.</h2>
    </div>
  </div>
</div>
<%= form_with(url: root_path, method: "get", local: true, html: { class: "search-form text-center" }) do |form| %>
  <div class="d-inline-block">
    <%= form.select :pokemon_type, options_for_select(Pokemon::TYPES, params[:pokemon_type]), include_blank: "Sélectionner un type", class: "select-input custom-select mb-2" %>
    <%= form.submit "Rechercher", class: "btn btn-danger submit-button btn-sm" %>
  </div>
<% end %>


<!-- Main container -->
<div class="container py-5">
  <h3>Pokemon disponibles</h3>
  <% if @pokemons.empty? %>
    <p>No list yet!</p>
  <% else %>
    <!-- Cards -->
    <div class="cards-container">
      <div class="cards-hp">
        <% @pokemons.each do |pokemon| %>
          <div class="card-hp" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= image_url('https://imgs.search.brave.com/wTLJH0OpadlxectcTPyXJGlFYHBumnpynZLFpqJSj3Y/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzLzJlLzdm/L2Y0LzJlN2ZmNDc5/MGMwYTliMDBiNGM4/ZGY1MWNmNTkzZDFk/LmpwZw') %>')"><%= link_to "", new_pokemon_booking_path(pokemon[:id]), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" }, class: "fa-solid fa-xmark" %><%= link_to pokemon[:name], new_pokemon_booking_path(pokemon) %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
